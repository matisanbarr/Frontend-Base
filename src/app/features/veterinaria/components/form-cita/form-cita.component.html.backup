<div class="modal fade show d-block" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title">Agregar cita</h2>
        <button type="button" class="close" (click)="close.emit()">
          <span>&times;</span>
        </button>
      </div>
      <form [formGroup]="form" (ngSubmit)="submit()">
        <div class="modal-body">
          <div class="row mb-3">
            <div class="col">
              <label class="form-label">Fecha</label>
              <div>{{ form.get('fecha')?.value ? (form.get('fecha')?.value | date: 'dd-MM-yyyy') : '' }}</div>
            </div>
            <div class="col">
              <label class="form-label">Hora inicio</label>
              <div>{{ form.get('horaInicio')?.value }}</div>
            </div>
            <div class="col">
              <label class="form-label">Hora fin</label>
              <div>{{ form.get('horaFin')?.value }}</div>
            </div>
          </div>
          <div class="mb-3">
            <label for="tipo" class="form-label">Tipo</label>
            <input id="tipo" type="text" formControlName="tipo" required class="form-control" />
          </div>
          <div class="mb-3">
            <label for="estado" class="form-label">Estado</label>
            <input id="estado" type="text" formControlName="estado" required class="form-control" />
          </div>
          <div class="mb-3">
            <label for="notas" class="form-label">Notas</label>
            <textarea id="notas" formControlName="notas" class="form-control"></textarea>
          </div>
          <div class="row">
            <div class="col">
              <label for="mascotaId" class="form-label">ID Mascota</label>
              <input id="mascotaId" type="text" formControlName="mascotaId" required class="form-control" />
            </div>
            <div class="col">
              <label for="veterinarioId" class="form-label">ID Veterinario</label>
              <input id="veterinarioId" type="text" formControlName="veterinarioId" required class="form-control" />
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary" [disabled]="form.invalid">Guardar</button>
        </div>
      </form>
    </div>
  </div>
</div>
